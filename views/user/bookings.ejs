<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header.ejs') %>

<body bg="#78a7ba">
    <%- include('../partials/nav.ejs') %>
    <% if(blogs.length > 0) %> <% blogs.forEach( blog=>{ %>
        <div class="post">
          <a href="/blogs/show-blog/<%= blog._id %>">
            <h3 class="post-title-index"><%= blog.title %></h3>
            <div class="post-snippet-index"><%= blog.snippet %></div>
          </a>
        </div>
        <% }) %>
      



    </body>
</html>